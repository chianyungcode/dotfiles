[user]
  name = "{{ .git_user}}"
  email = "{{ .git_email }}"

[ui]
  default-command = "log"

[git]
  push-new-bookmarks = true
  diff-formatter = "delta"

[aliases]
  ed = ["edit"]
  fetch = ["git", "fetch"]
  init = ["git", "init", "--colocate"]
  mark = ["bookmark", "set", "-r"]
  markc = ["bookmark", "set", "-r", "@"]
  push = ["git", "push", "--allow-new"]
  track = ["bookmark", "track"]
