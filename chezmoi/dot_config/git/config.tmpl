# =============================================================================
# DIFF & MERGE TOOLS
# =============================================================================
[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
    syntax-theme = "OneHalfDark"  # Theme
    plus-style = "syntax #445345"      # Warna untuk baris yang ditambahkan
    minus-style = "syntax #4F221F"     # Warna untuk baris yang dihapus
    line-numbers = true

    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[apply]
    whitespace = fix

# =============================================================================
# BRANCH MANAGEMENT
# =============================================================================
[branch]
    sort = -committerdate

# =============================================================================
# COLOR SETTINGS
# =============================================================================
[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

# =============================================================================
# REMOTE OPERATIONS
# =============================================================================
[fetch]
    prune = true      # Remove deleted remote branches in local
    pruneTags = true  # Remove deleted remote tags in local
    all = true        # Fetch from all configured remotes

[push]
    # agar ketika membuat branch baru di local tidak perlu melakukan perintah 'git push --set-upstream origin nama-branch-baru' . Menghindari salah penulisan nama branch sehingga dapat menyebabkan nama branch di local dan remote berbeda
    default = current

[pull]
    # avoid accidentally creating a merge commit when you run git pull on a branch where the upstream branch has diverged
    rebase = true

# =============================================================================
# REBASE SETTINGS
# =============================================================================
[rebase]
    autosquash = true
    autostash = true
    updateRefs = true

# =============================================================================
# PAGER SETTINGS
# =============================================================================
[pager]
    status = true
    show-branch = true

# =============================================================================
# LFS (Large File Storage)
# =============================================================================
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

