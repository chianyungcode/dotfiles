[
  {
    "bindings": {
      "cmd-alt-c": ["agent::NewExternalAgentThread", { "agent": "codex" }]
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "ctrl-w j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-s": "workspace::Save",
      "space space": "file_finder::Toggle"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      ".": "project_panel::ToggleHideHidden",
      "space e": ["workspace::CloseActiveDock", "project_panel::ToggleFocus"]
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "space space": "file_finder::Toggle",
      "space ,": "tab_switcher::Toggle",
      "space b d": "pane::CloseActiveItem",
      "space b o": "pane::CloseInactiveItems",
      "space w o": "workspace::CloseInactiveTabsAndPanes",
      "space |": "pane::SplitVertical",
      "space -": "pane::SplitHorizontal",
      "space e": "project_panel::ToggleFocus",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      "ctrl-/": "terminal_panel::Toggle"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-/": "terminal_panel::Toggle"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-s": ["workspace::SendKeystrokes", "escape ctrl-s"]
    }
  }
]
