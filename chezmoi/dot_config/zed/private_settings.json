{
  "base_keymap": "VSCode",
  "theme": "Catppuccin Mocha",

  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },

  "auto_install_extensions": {
    "dockerfile": true,
    "html": true,
    "sql": true,
    "java": true,
    "nix": true,
    "lua": true,
    "make": true,
    "latex": true,
    "prisma": true,
    "biome": true,
    "astro": true,
    "vue": true,
    "markdown-oxide": true,
    "wakatime": true,

    "mcp-server-context7": true,
    "postgres-context-server": true,
    "mcp-server-github": true,
    "mcp-server-exa-search": true,
    "mcp-server-firecrawl": true,
    "prisma-mcp": true,
    "mcp-server-resend": true,
    "mcp-server-buildkite": true,
    "shadcn-mcp": true
  },

  "autosave": "on_focus_change",
  "format_on_save": "on",
  "ui_font_size": 18,
  "buffer_font_size": 17,
  "buffer_font_family": "Dank Mono",
  "enable_language_server": true,
  "formatter": {
    "external": {
      "command": "./node_modules/@biomejs/biome/bin/biome",
      "arguments": ["format", "--write", "--stdin-file-path", "{buffer_path}"]
    }
  },
  "code_actions_on_format": {
    "source.fixAll.biome": true,
    "source.organizeImports.biome": true
  }
}
