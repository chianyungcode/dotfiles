set -U fish_color_command green
set -U fish_color_error red
set -U fish_color_param cyan
set -U fish_color_redirections yellow
set -U fish_color_terminators white
set -U fish_color_valid_path '#7CA6E9'

set -U fish_pager_color_progress '#fff' --background='#2B7388'

set -U fish_pager_color_background
set -U fish_pager_color_prefix white
set -U fish_pager_color_completion white
set -U fish_pager_color_description yellow

set -U fish_pager_color_selected_background --background=grey
set -U fish_pager_color_selected_prefix '#000000'
set -U fish_pager_color_selected_completion '#000000'
set -U fish_pager_color_selected_description '#000000'
