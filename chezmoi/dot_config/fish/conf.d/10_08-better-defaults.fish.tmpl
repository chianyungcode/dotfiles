{{- if lookPath "gping" }}
alias ping="gping"
{{- else if lookPath "prettyping" }}
alias ping="prettyping --nolegend"
{{- end }}

{{- if lookPath "bat" }}
alias cat="bat" # Prefer `bat` over `cat`
{{- end }}

function cd --wraps=cd
    # Always print contents of directory when entering
    builtin cd $argv; or return 1
    ll
end
