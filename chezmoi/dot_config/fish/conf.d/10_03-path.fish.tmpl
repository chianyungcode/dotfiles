#
# Add directories to PATH can achieve with 2 ways :
# set -gx PATH <path/to/bin> $PATH
# -- or --
# fish_add_path <custom_flags> <path/to/bin>

# macOS default binaries
fish_add_path -gP /bin
fish_add_path -gP /usr/bin
fish_add_path -gP /usr/sbin
fish_add_path -gP /sbin

# Additional tools binaries
fish_add_path -gP /opt/homebrew/bin
fish_add_path -gP /opt/homebrew/sbin
fish_add_path -gP /usr/local/bin

fish_add_path -gP $HOME/go/bin                  # go binary
fish_add_path -gP $HOME/.cargo/bin              # cargo binary
fish_add_path -gP {{ .xdgDataDir }}/cargo/bin   # cargo (xdg) binary

fish_add_path -gP $HOME/.local/bin
fish_add_path -gP $HOME/bin                     # personal bin
fish_add_path -gP /usr/bin/snap

fish_add_path -gP $PROTO_HOME/shims
fish_add_path -gP $PROTO_HOME/bin
fish_add_path -gP $HOME/.atuin/bin              # atuin (shell history)
fish_add_path -gP $XDG_CACHE_HOME/.bun/bin
fish_add_path -gP $HOME/.tmuxifier/bin          # tmuxifier (tmux session manager)
fish_add_path -gP $LM_STUDIO_BIN

# Remove duplicate paths from PATH variable
set -gx PATH (string split ':' $PATH | sort -u | string join ':')
