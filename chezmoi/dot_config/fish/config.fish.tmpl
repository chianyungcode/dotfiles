if not status is-interactive
    exit
end

# Create XDG directories
for dir in "$XDG_CACHE_HOME/fish" "$XDG_DATA_HOME/fish" "$XDG_STATE_HOME/fish"
    test -d "$dir"; or mkdir -p "$dir"
end

# Let fish load vi bindings via standard startup hook.
set -g fish_key_bindings fish_vi_key_bindings

# Disable greeting once; avoid rewriting universal vars every startup.
set -qU fish_greeting; or set -U fish_greeting
